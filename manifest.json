{
	"name": "PeopleSoft Financial Data Improvement Program",
	"version": "1.0",
	"description": "A web crawler for PeopleSoft Financial data",
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"declarativeContent"
	],
	"background":{
		"scripts": [
			"scripts/background.js"
		],
		"persistent": false
	},
    "content_scripts": [
        {
            "matches" : ["https://*.losrios.edu/*", "http://localhost:8000/*"],
            "js": ["scripts/jquery-3.4.1.min.js", "scripts/util.js", "scripts/content.js"],
            "run_at": "document_end"
        }
    ],
	"browser_action": {
      	"default_popup": "html/popup.html"
    },
	"manifest_version": 2
}